      Glacier: true
    eu-central-1:
      NatGateway: false
      ConfigRules: true
      Glacier: true
    eu-west-1:
      ConfigRules: true
      NatGateway: false
      Glacier: true
    eu-west-2:
      ConfigRules: false
      NatGateway: false
      Glacier: true
    ap-northeast-1:
      ConfigRules: true
      NatGateway: false
      Glacier: true
    ap-northeast-2:
      ConfigRules: true
      NatGateway: false
      Glacier: true
    ap-south-1:
      ConfigRules: false
